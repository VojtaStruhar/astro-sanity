{
  "name": "astro-sanity",
  "version": "1.1.7",
  "description": "A helper package to integrate Astro and Sanity",
  "license": "MIT",
  "globals": {
    "globalThis": true
  },
  "workspaces": [
    "./src",
    "./demo",
    "./demo-ssr"
  ],
  "scripts": {
    "dev": "npm run dev --workspace=src",
    "demo": "npm run dev --workspace=demo",
    "demo-ssr": "npm run dev --workspace=demo-ssr",
    "build": "npm run build --workspace=src",
    "build-demo": "npm run build --workspace=demo",
    "build-ssr": "npm run build --workspace=demo-ssr",
    "clean": "npm run clean --workspace=src",
    "prebuild": "npm run clean --workspace=src",
    "prepublishOnly": "npm run build --workspace=src",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "author": "Jaydan Urwin",
  "repository": {
    "type": "git",
    "url": "https://github.com/littlesticks/astro-sanity"
  }
}
